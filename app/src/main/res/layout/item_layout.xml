<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp">

    <TextView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="@string/clientID"
        android:src="@drawable/user1"
        android:padding="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/firstName"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:id="@+id/fName_ItemLayout"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img1"
        android:layout_toEndOf="@+id/img1"/>

    <TextView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/lastName"
        android:layout_toRightOf="@+id/fName_ItemLayout"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/lName_ItemLayout"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/lName_ItemLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"/>


</RelativeLayout>